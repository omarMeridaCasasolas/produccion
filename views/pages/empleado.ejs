<%- include('../partials/head'); %>
</head>
<body>
    <%- include('../partials/header'); %>
    <main class="container border shadow p-4 mb-4 mx-auto my-1 bg-white">
        <h3 class="text-center p-2 text-primary">Lista empleados</h3>
        <div>
            <button class="btn btn-success" data-toggle='modal' data-target='#modalAgregarEmpleado'>Agregar empleado</button>
        </div>
        <br>
        <div class="table-responsive">
            <table id="tablaEmpleado" class="table compact bordered table-hover" style="width:100%">
                <thead>
                    <tr class='bg-dark text-white'>
                        <th>ID</th>
                        <th>Nombre</th>
                        <th>Celular</th>
                        <th>Usuario</th>
                        <th>Tipo</th>
                        <th>Estado</th>
                        <th>Opc</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </main>
    <!-- MODAL PARA AGREGAR EMPLEADO-->
    <div class="modal fade" id="modalAgregarEmpleado" data-backdrop="static" data-keyboard="false" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header bg-success">
                    <h5 class="modal-title"> Agregar empleado</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form id="addFormEmpleado" autocomplete="off">
                        <div class="row">
                            <div class="col-7 form-group">
                                <label for="nombre">Nombre:</label>
                                <input type="text" name="nombre" id="addNombreEmpleado" class="form-control" required minlength="4" maxlength="64">
                            </div>
                            <div class="col-5 form-group">
                                <label for="celular">Celular:</label>
                                <input type="text" name="celular" id="addCelularEmpleado" class="form-control" maxlength="15">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-7 form-group">
                                <label for="usuario">Usuario:</label>
                                <input type="email" name="usuario" id="addUsuarioEmpleado" class="form-control" required minlength="6" maxlength="64" value="">
                            </div>
                            <div class="col-5 form-group">
                                <label for="password">Contraseña:</label>
                                <input type="password" name="password" id="addContraseñaEmpleado" class="form-control" required minlength="4" maxlength="32" value="">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6 form-group">
                                <label for="tipo">Tipo:</label>
                                <select name="tipo" id="addTipoEmpleado" class='form-control'>
                                    <option value="Alistador">Alistador</option>
                                    <option value="Cortador">Cortador</option>
                                </select>
                            </div>
                            <div class="col-6 form-group">
                                <label for="estado">Estado:</label>
                                <select name="estado" id="addEstadoEmpleado" class='form-control'>
                                    <option value="1">Activo</option>
                                    <option value="0">Inactivo</option>
                                </select>
                            </div>  
                        </div>
                        <hr>
                        <div class="text-center">
                            <input type="submit" class="btn btn-primary" value="Agregar">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- MODAL PARA ELIMINAR EMPELADO  -->
    <div class="modal fade" id="modalEliminarEmpleado" data-backdrop="static" data-keyboard="false" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header bg-danger">
                    <h5 class="modal-title">Eliminar empleado</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form id="formDeletEmpleado">
                        <span id="deletIdEmpleado" class='d-none'></span>
                        <div class="form-check">
                            <label class="form-check-label">
                                <input type="checkbox" class="form-check-input" value="" id="checkConfirmacion"> ¿Usted esta de acuerdo con eliminar 
                                al empleado <strong id='deletNombreEmpleado'></strong> siempre y cuando no haya ninguna registro de trabajos asignados?
                            </label>
                        </div>
                        <br>
                        <div class="text-center">
                            <input type="submit" class="btn btn-primary" value="Eliminar" disabled id="btnEliminarEmpleado">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</body>
    <%- include('../partials/footer'); %>   
    <script src="js/empleado.js"></script>
</html>